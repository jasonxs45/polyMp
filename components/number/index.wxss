.number {
  font-size: 0;
  letter-spacing: 0;
  overflow: hidden;
  display: block;
}
.number-input,
.number-btn-box-cut,
.number-btn-box-add {
  display: inline-block;
  vertical-align: middle;
}

.number-input {
  height: 80rpx;
  min-width: 80rpx;
  max-width: 200rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  color: #333333;
  font-size: 30rpx;
  text-align: center;
  margin:0 8rpx;
}
.number-btn-box {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  border-radius: 4rpx;
  transition: background-color .1s ease;
  color: #fff;
  background: #4d4d4d;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}

.number-btn-hover-class {
  opacity: .8;
}

.number-btn-box.number-btn-disabled {
  opacity: .4;
}