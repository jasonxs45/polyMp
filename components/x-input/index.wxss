.x-input{
  width: 100%;
  height: inherit;
  line-height: inherit;
  font-size: inherit;
  display: flex;
  position: relative;
  align-items: center;
  padding:0 15rpx;
}
.icon{
  flex: 0 0 40rpx;
  height: 100%;
  line-height: inherit;
  text-align: center;
}
input {
  font-size: inherit;
  flex: 1;
  margin-right: 10rpx;
  line-height: inherit;
  height: inherit;
}
.drop-menu{
  width: 100%;
  /* max-width: 100%; */
  position: absolute;
  z-index: 123;
  height: auto;
  max-height: 300rpx;
  background: #fff;
  border-radius: 4rpx;
  top: 100%;
  left:0;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,.2);
}
.drop-menu .item{
  font-size: inherit;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx dashed #ddd;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: inherit;
}
.drop-menu .item:last-child{
  border-bottom: none;
}