page{
  background: #f2f2f2;
}
.content{
  padding-top: 150rpx;
  height: 100vh;
}
.swiper{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
swiper-item{
  height: 100%;
}
.scroll-view{
  width: 100%;
  height: 100%;
}
.tabs{
  color: #888;
  height: 150rpx;
  display: flex;
  position: fixed;
  width:100%;
  top:0;
  left: 0;
  z-index: 10;
  background: #fff;
  overflow: hidden;
  justify-content: space-between;
  box-shadow: 0 0 2rpx 1rpx rgba(0,0,0,.2);
}
.tab-item{
  flex: 1;
  text-align: center;
  height: inherit;
}
.tab-item .num{
  font-size: 36rpx;
  color: #edc27b;
  font-weight: 500;
  margin-top: 30rpx;
}
.tab-item .text{
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}
.tabs .bar{
  position: absolute;
  height: 6rpx;
  width: 50%;
  background: #4d4d4d;
  border-radius: 4rpx;
  bottom: 0;
  transform: scaleX(.7);
  transition: left .2s ease-out; 
}
.card {
  background: #fff;
  margin: 30rpx;
  border-radius: 4px;
}
.card .head {
  height: 76rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding: 0 30rpx;
  align-items: center;
}
.card .head .tit {
  color: #333;
  font-size: 26rpx;
  font-weight: 300;
  width: 420rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.card .head .sub-tit {
  color: #333;
  font-size: 24rpx;
  font-weight: 300;
}
.card .body {
  font-size: 36rpx;
  padding: 0;
  text-align: center;
  font-weight: 500;
  color: #333;
}
.card .foot{
  border-top:1rpx solid #ddd;
  padding: 10rpx;
  text-align: right;
}
.qr-detail {
  overflow: hidden;
}
.qr-detail .detail{
  border-top:1rpx solid #ddd;
  padding: 20rpx 0;
  transition: height,padding,opacity .3s;
}
.qr-detail .detail.hidden{
  border-top: none;
  height: 0;
  padding: 0;
  opacity: 0
}
.packup-unfold{
  border-top:1rpx dotted #ddd;
  height: 80rpx;
  text-align: center;
  background: #fff;
  position: relative;
  z-index: 1;
}
.packup-unfold .icon{
  font-size: 30rpx;
  color: #999;
}
.packup-unfold .text{
  display: block;
  font-size: 20rpx;
  color: #999;
}
.contactor-info{
  padding:50rpx 30rpx;
  text-align: center;
}
.contactor-info .icon{
  color: #999;
}
.company-name{
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  padding: 40rpx 0 50rpx;
}
.contactor-info .company-name{
  padding:0;
}
.building-name{
  color:#999;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 30rpx;
}
.edit, .del{
  display: inline-block;
  background: none;
  border:none;
  font-size: 24rpx;
  color: #999;
  margin-left: 15rpx;
}
.edit:after, .del:after{
  background: none !important;
  border: none !important;
}
.add{
  position: fixed;
  z-index: 11;
  width: 80rpx;
  height: 80rpx;
  right: 30rpx;
  bottom: 100rpx;
  background: rgba(0,0,0,.7);
  color: #fff;
  text-align: center;
  border-radius: 50%;
  line-height: 80rpx;
}