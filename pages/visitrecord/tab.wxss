page{
  background: #f2f2f2;
}
.content{
  padding-top: 150rpx;
  height: 100vh;
}
.swiper{
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-bottom: 30rpx;
}
swiper-item{
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.tabs{
  color: #888;
  height: 150rpx;
  display: flex;
  position: fixed;
  width:100%;
  top:0;
  left: 0;
  z-index: 10;
  background: #fff;
  justify-content: space-between;
}
.tab-item{
  flex: 1;
  text-align: center;
}
.tab-item .num{
  font-size: 36rpx;
  color: #edc27b;
  font-weight: 500;
  margin-top: 30rpx;
}
.tab-item .text{
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}
.tabs .bar{
  position: absolute;
  height: 6rpx;
  width: 50%;
  background: #4d4d4d;
  border-radius: 4rpx;
  bottom: 0;
  transform: scaleX(.7);
  transition: left .2s ease-out; 
}