page{
  background: #f2f2f2;
}
.content {
  padding-top: 80rpx;
  height: 100vh;
}
.tabs {
  color: #888;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  justify-content: space-between;
  box-shadow: 0 0 2rpx 0 rgba(0,0,0,.2);
}

.tab-item {
  flex: 1;
  text-align: center;
  height: inherit;
  line-height: inherit;
}

.tab-item .text {
  color: #999;
  font-size: 26rpx;
  height: inherit;
  line-height: inherit;
}
.tab-item .text.active{
  color: #333;
}
.swiper {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

swiper-item {
  height: 100%;
}
.swiper .scroll-view{
  height: 100%;
}
.list-wrapper{
  padding:0 30rpx;
}
.card{
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  position: relative;
}
.card .mark{
  position: absolute;
  top:0;
  right:0;
  border-radius: 0 8rpx 0 0;
  background: #ccc;
  height: 30rpx;
  width: 80rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  color:#333;
  font-weight: 500;
}
.card .head{
  justify-content: space-between;
  align-items: center;
}
.card .head .tit{
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.card .head .date{
  color: #999;
  font-size: 24rpx;
}
.card .line{
  margin-top: 28rpx;
  display: block;
}
.card .body .desc{
  color: #333;
  font-size: 24rpx;
  line-height: 34rpx;
  display: block;
  margin-top: 28rpx;
}
.card .body .tags{
  margin:15rpx -15rpx;
  font-size: 0;
}
.card .body .tags .tag{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 24rpx;
  padding: 0 30rpx;
  margin: 15rpx;
}
.tosubmit{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0,0,0,.7);
  color: #fff;
  font-size: 40rpx;
  bottom: 30rpx;
  right: 30rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
}