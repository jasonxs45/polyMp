page{
  background: #f2f2f2;
}
.rate{
  min-height: 100vh;
  padding-bottom: 200rpx;
}
.section{
  padding: 30rpx;
  background: #fff;
}
.rate-item{
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.rate-item .tit,
.rate-item .describe{
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  width: 140rpx;
}
.rate-item .describe{
  text-align: right;
  width: 180rpx;
}
.stars .star{
  margin: 10rpx;
}
.btns{
  padding: 30rpx;
  height: 200rpx;
  position: relative;
  margin-top: -200rpx;
}
.rate-texts{
  display: block;
  width: 100%;
  font-size: 28rpx;
  background: #f5f5f5;
  padding: 30rpx;
  border-radius: 8rpx;
  line-height: 36rpx;
  margin-top: 40rpx;
}