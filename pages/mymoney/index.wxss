.banner{
  height: 320rpx;
  width: 100%;
  background: #F37D69;
  padding-top: 86rpx;
  position: relative;
}
.banner .brief{
  display: inline-block;
  margin-left: 30rpx;
}
.banner .tit{
  font-size: 24rpx;
  color: #fff;
}
.banner .num{
  font-size: 90rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 20rpx;
}
.help{
  position: absolute;
  width: 150rpx;
  height: 52rpx;
  right: 30rpx;
  top: 50%;
  margin-top: -26rpx;
  color: #fff;
  font-size: 28rpx;
}
.list{
}
.item {
  justify-content: space-between;
  padding: 35rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
  align-items: center;
}
.item .tit{
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.item .date{
  font-size: 26rpx;
  color: #888;
  margin-top: 30rpx;
}
.item .point{
  font-size: 40rpx;
  color: #4d4d4d;
  font-weight: bold;
}
.bottom{
  text-align: center;
  font-size: 26rpx;
  color: #ddd;
  padding: 30rpx;
}
.popup{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  top:0;
  left:0;
  padding: 30rpx;
  z-index: 1;
  transform: translateY(100%);
  transition: transform .2s;
}
.popup.show{
  transform: none;
}
.popup .panel{
  background: #fff;
  border-radius: 8rpx;
  padding: 50rpx 30rpx;
}
.popup .panel .title{
  font-size: 30rpx;
  color: #4d4d4d;
}
.money-input{
  border-bottom: 1rpx solid #ddd;
  padding: 10rpx 0;
  margin: 30rpx 0;
}
.money-input text{
  font-size: 60rpx;
  font-weight: bold;
  padding-top: 10rpx;
}
.money-input  input{
  font-size: 60rpx;
  font-weight: bold;
  padding:0 15rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.placeholder{
  font-weight: 400;
  font-size: 30rpx;
}
.popup .btn{
  display: block;
  margin-top: 70rpx;
}
.popup .tips{
  font-size: 24rpx;
  color:#888;
}
.popup .tips .all{
  color: #4d4d4d;
  font-weight: 500;
}
.popup .cancel{
  display: block;
  margin-top: 30rpx;
}