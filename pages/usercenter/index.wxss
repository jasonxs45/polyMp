@import './bg.wxss';
.base-info {
  position: relative;
  height: 330rpx;
  padding: 30rpx;
}
.avatar {
  width: 160rpx !important;
  height: 160rpx !important;
  display: block;
  margin: 0 auto;
  border-radius: 50%;
  border: 1px solid #fff;
}

.nickname {
  text-align: center;
  font-size: 28rpx;
  margin-top: 10rpx;
  line-height: 30rpx;
}
.nickbg{
  display: inline-block;
  background: #4d4d4d;
  font-size: 20rpx;
  color: #fff;
  border-radius: 12px;
  font-weight: 500;
  padding: 10rpx;
  box-shadow: 0 0 2rpx 0 rgba(255,255,255, .3);
}
.go-signin{
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -40rpx;
  width: 116rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #F59480;
  font-size: 24rpx;
  font-weight: bold;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.edit {
  display: inline-block;
  vertical-align: middle;
  padding: 0 10rpx 0 5rpx;
}
.edit image{
  width: 30rpx;
  height: 30rpx;
}

.role {
  text-align: center;
  margin-top: 10rpx;
}
.role text{
  background: #4d4d4d;
  font-size: 20rpx;
  color: #fff;
  border-radius: 12px;
  font-weight: 500;
  padding: 0 10rpx;
  box-shadow: 0 0 2rpx 0 rgba(255,255,255, .3);
}

.point-money {
  justify-content: space-around;
  padding: 0 30rpx;
  height: 120rpx;
}

.points, .money {
  flex: 0 0 50%;
  padding: 0 30rpx;
  text-align: center;
  margin: 16rpx 0;
}

.numbers {
  font-size: 36rpx;
  font-weight: 600;
  color:#333;
  line-height: 50rpx;
}
.text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  margin-top: 8rpx;
}
.navigators{
  border-bottom: 1rpx solid #ddd;
  padding:20rpx 30rpx;
  align-items: center;
}
.group .navigators:last-child{
  border-bottom: none;
}

.navigators .icon{
  flex: 0 0 72rpx;
}
.navigators .icon image {
  width: 72rpx;
  height: 72rpx;
}
.navigators .label{
  flex: 1;
  color: #4d4d4d;
  font-size: 24rpx;
  font-weight: 600;
  padding-left: 20rpx;
}
.navigators .arrow{
  color: #4d4d4d;
  font-size: 26rpx;
  font-weight: 600;
}