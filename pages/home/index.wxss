page{
  background: #f2f2f2;
}
.section, .pad30{
  background: #fff;
  padding: 30rpx;
}
.pad30 {
  background: none;
}
.swiper{
  width: 100%;
  height: 320rpx;
}
.swiper .nav,
.swiper .img{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.entries{
  justify-content: space-between;
  margin: 50rpx 0;
}
.entry{
  display: inline-block;
  text-align: center;
}
.entry .img{
  width:98rpx;
  height: 96rpx;
  margin: 0 auto;
}
.entry .text{
  color: #333;
  font-size: 24rpx;
  margin-top: 15rpx;
  letter-spacing: -1rpx;
  word-spacing: -1rpx;
}
.title{
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.title .text{
  font-size: 34rpx;
  color:#333;
  font-weight: bold;
}
.title .nav{
  color: #999;
  font-size: 24rpx;
}
.activity-nav {
  margin-top: 30rpx;
  background: #fff;
  border-radius: 8rpx;
}
.activity-nav .img{
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
}
.list-wrapper{
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx -15rpx;
}
.cell {
  width: 330rpx;
  height: 548rpx;
  margin: 15rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 8rpx;
  box-shadow: 0 3rpx 3rpx 0 rgba(0,0,0,.2);
}

.cell .img{
  width: 330rpx;
  height: 330rpx;
}
.cell .detail{
  padding:30rpx;
}
.cell .tit{
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 40rpx;
}
.cell .info{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 30rpx;
}
.cell .cost{
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.cell .cost text{
  color: #666;
  font-size: 16rpx;
  font-weight: 400;
}
.cell .btn{
  width: 118rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 0;
  font-size: 28rpx;
  border-radius: 4rpx; 
  color: #fff !important;
}
.bottom-line{
  justify-content: space-between;
  align-items: center;
  color: #999;
  padding:0 30rpx 30rpx;
  font-size: 24rpx;
}
.bottom-line .text{
    margin:0 20rpx;
}
.bottom-line::before,
.bottom-line::after{
  content: '';
  height: 1rpx;
  background: #ddd;
  flex: 1;
  display: block;
}