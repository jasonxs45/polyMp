page {
  background: #f2f2f2;
}
.waiting{
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  background:rgba(208,38,29,1);
  font-size:26rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin-bottom: 10rpx;
}
.section{
  padding: 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.user .company{
  font-size: 34rpx;
  color: #333;
}
.user .info{
  margin-top: 20rpx;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
}

.form-bar {
  display: block;
}

.fh {
  font-size: 24rpx;
  color: #333;
}

.fh text {
  font-size: 20rpx;
  color: #666;
}
.fb {
  font-size: 26rpx;
  margin-top: 20rpx;
}
.list{
  background: #fff;
  margin-bottom: 10rpx;
}
.title{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  padding: 20rpx 30rpx;
  border:2rpx solid rgba(238,238,238,1);
}
.listXq{
  border-bottom:2rpx solid rgba(238,238,238,1);
}
.listXq view{
  margin: 0 0 0 30rpx;
  border-bottom:2rpx solid rgba(238,238,238,1);
  font-size:26rpx;
  font-weight:400;
  color:rgba(19,19,20,1);
  line-height:36rpx;
  padding: 28rpx 30rpx 30rpx 0; 
  position: relative;
}
.listXq view:last-child{ border: 0;}
.listXq image{
  width:80rpx;
  height:80rpx;
  border-radius:10rpx;
  background: #ccc;
  display: inline-block;
  vertical-align: middle;
  margin-right: 40rpx;
}
.listXq text{
  font-size:26rpx;
  font-weight:500;
  color:rgba(19,19,20,1);
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translate(0,-50%);
}
.remarks{
  font-size:24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:34rpx;
  padding: 20rpx 30rpx;
}

.remarksText{
  margin: 0 30rpx;
  padding: 40rpx 30rpx;
  background:rgba(254,240,229,1);
  font-size:24rpx;
  font-weight:500;
  color:rgba(150,113,65,1);
  line-height:34rpx;
}
.remarksTime{
  font-size:26rpx;
  font-weight:500;
  color:rgba(19,19,20,1);
  line-height:36rpx;
  padding: 30rpx;
}
.remarksTime text{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  padding-right: 30rpx;
}
.bombContent{
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 120rpx  0;
}
.ewmImg{ 
  display: block; 
  width: 360rpx;
  height: 360rpx;
  background: #ccc;
  margin: 0 auto 30rpx;
}
.ewmText{
  font-size:24rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:34rpx;
  letter-spacing:6rpx;
  text-align: center;

}
.prompt{
  font-size:28rpx;
  font-weight:500;
  color:rgba(150,113,65,1);
  line-height:40rpx;
  text-align: center;
  margin-top: 80rpx;
}