page{
  background:#F2F2F2;
}
.list{
  margin: 20rpx 30rpx;
}
.content{
  background: #FFFFFF;
  padding: 40rpx 30rpx 10rpx 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.content view{
  font-size:26rpx;
  font-weight:500;
  color:rgba(19,19,20,1);
  line-height:36rpx;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 130rpx;
}
.content view text{
  font-size:24rpx;
  color:rgba(102,102,102,1);
  position: absolute;
  left: 0;
  top: 0;
}
.content .status{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  height:36rpx;
  line-height: 36rpx;
  text-align: center;
  padding: 0 10rpx;
  background:rgba(254,240,229,1);
  border-radius:2px;
  font-size:20rpx;
  font-weight:500;
  color:rgba(150,113,65,1);
  z-index: 5;
}
.content .status.on{
  background:#D0261D;
  color:#FFFFFF;
}
.bomb{
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  background:rgba(0,0,0,0.8);
  z-index: 99;
}
.bombContent{
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%,-50%);
  width: 600rpx;
  min-height: 300rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 76rpx
}
.ewmImg{ 
  display: block; 
  width: 360rpx;
  height: 360rpx;
  background: #ccc;
  margin: 0 auto 30rpx;
}
.ewmText{
  font-size:24rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:34rpx;
  letter-spacing:6rpx;
  text-align: center;

}
.prompt{
  font-size:28rpx;
  font-weight:500;
  color:rgba(150,113,65,1);
  line-height:40rpx;
  text-align: center;
  margin-top: 80rpx;
}
.close{
  position: absolute;
  bottom: -140rpx;
  left: 50%;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-left: -40rpx;
  border:2rpx solid rgba(255,255,255,1);
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: normal;
}