page {
  background: #f2f2f2;
}
.electronic {
  padding-bottom: 200rpx;
  min-height: 100vh;
}
.section{
  padding: 30rpx;
  background: #fff;
}
.electronic .user .company{
  font-size: 34rpx;
  color: #333;
}
.electronic .user .info{
  margin-top: 20rpx;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
}
.form {
  padding: 0 0 40rpx;
}
.form-bar {
  display: block;
}

.fh {
  font-size: 24rpx;
  color: #333;
}

.fh text {
  font-size: 20rpx;
  color: #666;
}

.fb {
  font-size: 26rpx;
  margin-top: 20rpx;
}
.clearable-input {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}
.timepicker{
  width:100%;
  height: 100%;
}
.clearable-textarea {
  display: block;
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.clearable-textarea textarea {
  width: 100%;
  height: 140rpx;
  font-size: 26rpx;
  line-height: 32rpx;
}
.goods{
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.goods .img-wrapper{
  position: relative;
}
.goods .img, .goods .icon{
  width: 80rpx;
  height: 80rpx;
}
.goods .icon{
  border:1rpx dashed #333;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: #666;
  border-radius: 6rpx;
}
.goods .img-wrapper .del{
  position: absolute;
  top:-8px;
  right:-3px;
}
.goods-name{
  width:420rpx;
  height: 80rpx;
  background: #f5f5f5;
  padding:0 10rpx;
}
.goods-count{
  width:96rpx;
  height: 80rpx;
  background: #f5f5f5;
  text-align: center;
}
.goods-remove{
  width:60rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.goods-remove .remove{
  vertical-align: middle;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  font-size: 30rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.add{
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  border:1px dashed #999;
  text-align: center;
  line-height: 80rpx;
  color: #999;
  font-size: 24rpx;
}
.btns {
  text-align: center;
  width: 100%;
  height: 200rpx;
  padding: 50rpx 30rpx;
  position: relative;
  margin-top: -200rpx;
}
.btn {
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
}
