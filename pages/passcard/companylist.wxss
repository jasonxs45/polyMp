page {
  background: #f2f2f2;
}
.actTop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.03), 0px -1px 0px 0px rgba(0, 0, 0, 0.05);
}

.text {
  font-size: 28rpx;
  font-family: PingFang-TC-Light;
  font-weight: 300;
  color: #666;
  text-align: center;
  height: 96rpx;
  line-height: 96rpx;
}

.text.on {
  font-weight: 700;
  color: #333;
}
.contain{
  padding-top: 96rpx;
  height: 100vh;
}
.swiper {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.swiper .container {
  height: 100%;
  padding: 0 30rpx;
}
.list {
  padding:0 30rpx;
}

.card {
  background: #fff;
  padding: 30rpx;
  margin: 30rpx 0;
  position: relative;
  border-radius: 4rpx;
}
.p{
  margin: 30rpx 0;
}
.p:first-child{
  margin-top: 0
}
.ph {
  width: 120rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
  line-height: 34rpx;
}

.pb {
  flex: 1;
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  line-height: 36rpx;
}

.card .tag {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 10rpx;
  background: #4D4D4D;
  border-radius: 2px;
  font-size: 20rpx;
  font-weight: 500;
  color: #fff;
  z-index: 5;
}
.card .tag.red{
  background: #D0261D;
  color: #fff;
}
.card .tag.green{
  background: #00b26a;
  color: #fff;
}

.card .status.on {
  background: #d0261d;
  color: #fff;
}
