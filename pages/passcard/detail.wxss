page {
  background: #f2f2f2;
}
.section {
  padding: 30rpx;
  background: #fff;
}

.user .company {
  font-size: 34rpx;
  color: #333;
}

.user .info {
  margin-top: 20rpx;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
}

.list {
  background: #fff;
}

.title {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  padding: 20rpx 30rpx;
}

.listXq .goods {
  margin: 0 0 0 30rpx;
  border-bottom: 2rpx solid rgba(238, 238, 238, 1);
  color: rgba(19, 19, 20, 1);
  padding: 28rpx 30rpx 30rpx 0;
  justify-content: space-between;
  align-items: center;
}

.listXq .goods:last-child {
  border: 0;
}

.listXq .img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 40rpx;
}

.listXq .name, .listXq .count {
  font-size: 26rpx;
  font-weight: 500;
  color: #131314;
}

.listXq .name {
  flex: 1;
  text-align: left;
}

.listXq .count {
  text-align: right;
  width: 100rpx;
}

.remarks {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 34rpx;
  padding: 20rpx 30rpx;
}

.remarksText {
  margin: 0 30rpx;
  padding: 30rpx;
  background: #f5f5f5;
  font-size: 24rpx;
  font-weight: 500;
  color: #131314;
  line-height: 34rpx;
}

.remarksTime {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(19, 19, 20, 1);
  line-height: 36rpx;
  padding: 30rpx;
}

.remarksTime text {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  padding-right: 30rpx;
}

.bombContent {
  background: #fff;
  border-radius: 8rpx;
  padding: 60rpx 0;
}

.ewmImg {
  display: block;
  width: 360rpx;
  height: 360rpx;
  background: #ccc;
  margin: 0 auto;
}

.ewmText {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  line-height: 34rpx;
  text-align: center;
  margin-top: 30rpx;
}

.prompt {
  font-size: 28rpx;
  font-weight: 500;
  color: #131314;
  line-height: 40rpx;
  text-align: center;
  margin-top: 40rpx;
}

.result {
  background: #fff;
}

.result .tit {
  color: #999;
  font-size: 24rpx;
}
.p{
  justify-content: space-between;
  align-items: center;
}
.ph {
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}

.pb {
  text-align: right;
  font-size: 26rpx;
  font-weight: 500;
  color: #131314;
  line-height: 36rpx;
}
.result-text{
  text-align: center;
  font-size:34rpx;
  font-weight:bold;
  line-height:48rpx;
  padding: 30rpx 0;
}
.result-info{
  padding:30rpx;
}
.result-info .p{
  margin: 30rpx 0;
}
.result-info .p:first-child{
  margin-top: 0
}
.tit{
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}
.img-row{
  display: block;
  margin-top: 20rpx;
}
.btns{
  padding:30rpx;
}
.btns .btn{
  margin: 30rpx 0;
  display: block;
}
.handle-box{
  position: fixed;
  z-index: 2;
  background: #f2f2f2;
  width: 100%;
  height: 100%;
  top:0;
  left:0;
  transform: translateY(100%);
  transition: transform .2s;
}
.remark{
  font-size: 30rpx;
  width:100%;
  background: #f2f2f2;
  color: #333;
  border-radius: 8rpx;
  padding:20rpx;
}

.handle-box.show{
  transform: translateY(0)
}
.handle-box .btns{
  position: absolute;
  width: 100%;
  height: 300rpx;
  left:0;
  bottom: 0;
}