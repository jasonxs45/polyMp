.bg{
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: -1;
}
.wrapper{
  height: 100vh;
}
.tit{
  width: 508rpx;
  margin: 90rpx auto 30rpx;
}
.subtit{
  width: 395rpx;
  margin: 100rpx auto 0;
}
.packets{
  width: 580rpx;
  margin: 30rpx auto;
}
.envelope{
  width: 152rpx;
  margin: 30rpx 0;
}
.r1{
  justify-content: space-between;
}
.r2{
  justify-content: space-between;
  padding:0 120rpx;
}
.rule{
  width: 575rpx;
  margin: 30rpx auto;
}
.success{
  position: fixed;
  width:100%;
  height: 100%;
  top:0;
  left:0;
  z-index:100;
}
.success .bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.87);
}
.success-wrapper{
  position: absolute;
  width:100%;
  height: 100%;
  top:0;
  left:0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.succ{
  width: 540rpx;
  height: 560rpx;
  position: relative;
}
.succ_bg{
  width: 100%;
  height: 100%;
}
.succ .desc{
  text-align: center;
  color: #333;
  font-size: 26rpx;
  position: absolute;
  bottom: 24rpx;
  width: 100%;
  padding: 10rpx 50rpx;
  z-index:1;
  line-height: 42rpx;
}
.desc .num{
  font-size: 200%;
  font-weight: 500;
}
.desc .nav{
  display: inline-block;
  color: #ee1200;
}
.close{
  margin-top: 120rpx;
}
.l1{
  margin: 10rpx 0;
