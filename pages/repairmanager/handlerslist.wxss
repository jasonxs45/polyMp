page{
  background: #f2f2f2;
}
.content {
  padding-top: 80rpx;
  height: 100vh;
}

.swiper {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.tabs {
  color: #888;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  justify-content: space-between;
  box-shadow: 0 0 2rpx 0 rgba(0,0,0,.2);
}

.tab-item {
  flex: 1;
  text-align: center;
  height: inherit;
  line-height: inherit;
}

.tab-item .text {
  color: #999;
  font-size: 26rpx;
  height: inherit;
  line-height: inherit;
}
.tab-item .text.active{
  color: #333;
}
.scroll-view{
  height: 100%;
}
.scroll-area{
  padding: 30rpx;
}
.card{
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  position: relative;
}
.card .mark{
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  background:rgba(150,113,65,1);
  border-radius:4rpx;
  width: 100%;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-top: 28rpx;
}
.card:first-child{
  margin-top: 0;
}
.card .head{
  justify-content: space-between;
  align-items: center;
}
.card .head .tit{
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.card .head .date{
  color: #999;
  font-size: 24rpx;
}
.card .line{
  margin-top: 28rpx;
  display: block;
}
.card .body .desc{
  color: #333;
  font-size: 24rpx;
  line-height: 34rpx;
  display: block;
  margin-top: 28rpx;
}
.card .body .tags{
  margin:15rpx -15rpx;
  font-size: 0;
}
.card .body .tags .tag{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  background: #FEF0E5;
  color: #333;
  font-size: 24rpx;
  padding: 0 30rpx;
  margin: 15rpx;
}
.assign{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background:rgba(0,0,0,0.4);
  z-index: 100;
}
.assignM{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #F5F5F5;
}
.assignM>view{
  display: block;
  width: 100%;
  background: #fff;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size:34rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.assignM>view navigator{
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}
.assignM .line{
  margin-top: 2rpx;
  display: block;
}
.assignM>view:last-child{
  margin-top: 20rpx;
}