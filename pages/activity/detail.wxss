@import "/libs/wxParse/wxParse.wxss";
page {
  background: #F5F5F5;
  padding-bottom: 90rpx;
}

.detail {
  background: #fff;
  margin-bottom: 10rpx;
  padding: 30rpx 30rpx 0;
}

.detail_img {
  display: block;
  width: 100%;
  background: #fff;
}

.detail_img image {
  display: block;
  width: 100%;
}

.detail_title {
  padding-bottom: 40rpx;
  border-bottom:2rpx solid rgba(0,0,0,0.0972);
  margin-bottom: 28rpx;
}
.detail_title_t1{
  font-size:36rpx;
  line-height:46rpx;
  font-weight:700;
  color:#333333;
  margin-bottom: 15rpx;
}
.detail_title_t2{
  justify-content: space-between;
  align-items: flex-end;
}
.detail_title_t2 .desc{
  font-size:24rpx;
  color:#666666;
  display: block;
}
.detail_title_t2 .tag{
  display: block;
  height: 36rpx;
  background:#4d4d4d;
  border-radius:4rpx;
  font-size:24rpx;
  line-height:36rpx;
  color:#fff;
  padding:0 16rpx;
}

.detail_text {
  font-size:26rpx;
  color:#999999;
  line-height:30rpx;
  padding-bottom:10rpx; 
}
.detail_text text{
  display: block;
  margin-bottom: 20rpx;
}
.detail_rem{
  padding: 44rpx 30rpx 40rpx 30rpx;
  text-align: center;
}
.detail_rem image{
  display: block;
  width: 360rpx;
  height: 360rpx;
  background: #cccccc;
  margin: 0 auto 30rpx;
}
.detail_rem text{
  font-size:24rpx;
  color:#333333;
  line-height:34rpx;
}
.detail2{
  padding: 44rpx 30rpx 40rpx 30rpx;
}
.detail_text_title{
  display: block;
  text-align: center;
  font-size:28rpx;
  font-weight:700;
  color:#333333;
  line-height:28rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.detail_text_title::after{
  content: "";
  width: 260rpx;
  height: 2rpx;
  background: #000000;
  opacity: 0.0972;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -1rpx;
}

.detail_text_title::before{
  content: "";
  width: 260rpx;
  height: 2rpx;
  background: #000000;
  opacity: 0.0972;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -1rpx;
}

.detail_html{
  font-size:24rpx;
  font-weight:400;
  color:#666666;
  line-height:34rpx;
}

.detaliBut {
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #333;
  font-size: 34rpx;
  font-family: PingFang-TC-Medium;
  font-weight: 500;
  color: #edc27b;
}
.nodata{
  text-align: center;
}
