.actTop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.03), 0px -1px 0px 0px rgba(0, 0, 0, 0.05);
}

.text {
  font-size: 28rpx;
  font-family: PingFang-TC-Light;
  font-weight: 300;
  color: #666;
  text-align: center;
  height: 96rpx;
  line-height: 96rpx;
}

.text.on {
  font-weight: 700;
  color: #333;
}

.actMain {
  padding-top: 96rpx;
  height: 100vh;
}

.swiper {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.swiper .container {
  height: 100%;
}

.acList {
  display: block;
  width: 100%;
  height: 330rpx;
  margin: 30rpx 0;
  overflow: hidden;
  border-radius: 8rpx;
  padding: 5rpx 30rpx;
}

.acList image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  box-shadow: 0 0 2rpx 1rpx rgba(0, 0, 0, 0.1);
}

.bottom {
  font-size: 26rpx;
  line-height: 46rpx;
  color: #666;
  text-align: center;
  margin: 15rpx 0;
}
