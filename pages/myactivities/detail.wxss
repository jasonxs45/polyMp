@import "/libs/wxParse/wxParse.wxss";
page {
  background: #F5F5F5;
}

.detail {
  background: #fff;
  margin-bottom: 10rpx;
  padding: 30rpx;
}

.detail_img {
  display: block;
  width: 100%;
  background: #fff;
}

.detail_img image {
  display: block;
  width: 100%;
}

.detail_title {
  padding-bottom: 40rpx;
  border-bottom:2rpx solid rgba(0,0,0,0.0972);
  margin-bottom: 28rpx;
}
.detail_title_t1{
  font-size:36rpx;
  line-height:46rpx;
  font-weight:700;
  color:#333333;
  margin-bottom: 15rpx;
}

.detail_text {
  font-size:26rpx;
  color:#999999;
  line-height:30rpx;
  padding-bottom:10rpx; 
}
.detail_text text{
  display: block;
  margin-bottom: 20rpx;
}
.detail_rem{
  padding: 44rpx 30rpx 40rpx 30rpx;
  text-align: center;
}
.detail_rem image{
  display: block;
  width: 360rpx;
  height: 360rpx;
  background: #cccccc;
  margin: 0 auto 30rpx;
}
.detail_rem .yhx{
  padding-bottom: 30rpx;
  font-size: 30rpx;
}
.detail_rem text{
  font-size:24rpx;
  color:#333333;
  line-height:34rpx;
}
.detail2{
  padding: 44rpx 30rpx 40rpx 30rpx;
}
.detail_text_title{
  display: block;
  text-align: center;
  font-size:28rpx;
  font-weight:700;
  color:#333333;
  line-height:28rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.detail_text_title::after{
  content: "";
  width: 260rpx;
  height: 2rpx;
  background: #000000;
  opacity: 0.0972;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -1rpx;
}

.detail_text_title::before{
  content: "";
  width: 260rpx;
  height: 2rpx;
  background: #000000;
  opacity: 0.0972;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -1rpx;
}

.detail_html{
  font-size:24rpx;
  font-weight:400;
  color:#666666;
  line-height:34rpx;
}
.nodata{
  text-align: center;
}
.detail_title_t2 .desc{
  font-size:24rpx;
  color:#666666;
  display: block;
}
.btns{
  padding: 60rpx 30rpx;
}
.rate-item{
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.rate-item .tit,
.rate-item .describe{
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  width: 140rpx;
}
.rate-item .describe{
  text-align: right;
  width: 180rpx;
}
.stars .star{
  margin: 10rpx;
}
.rate-texts{
  display: block;
  font-size: 26rpx;
  background: #f5f5f5;
  padding: 30rpx;
  border-radius: 4rpx;
  line-height: 36rpx;
  margin-top: 40rpx;
}