.base-info{
  padding: 60rpx 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info{
  flex:0 0 200rpx;
}
.avatar{
  width: 96rpx;
  height: 96rpx;
  margin-right: 30rpx;
}
.nickname{
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.role{
  display: inline-block;
  margin-top: 38rpx;
  font-size: 20rpx;
  color: #edc27b;
  background: #4d4d4d;
  height: 26rpx;
  line-height: 26rpx;
  padding:0 10rpx;
  border-radius: 12px;
}
.points{
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}
.points text{
  font-size: 54rpx;
  color: #edc27b;
  font-weight: 800;
  margin-right: 10rpx;
}
.content{
  padding: 30rpx;
}
.card{
  width: 100%;
  height: 388rpx;
  position: relative;
  padding: 44rpx;
  margin-top: 30rpx;
}
.card .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
  z-index: -1;
}
.steps{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.step{
  flex:0 0 calc(100% / 7);
  width: calc(100% / 7);
}
.step .flex{
  width: 100%;
  align-items: center;
}
.step .flex::before{
  content: '';
  border-bottom: 2px solid #edc27b;
  flex: 1;
}
.step .flex::after{
  content: '';
  border-bottom: 2px solid #edc27b;
  flex:1;
}
.step .circle{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #edc27b;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  line-height: 44rpx;
}
.step icon{
  width: 100%;
  height: 100%;
  opacity: .8;
  line-height: 70rpx;
}
.step icon:before{
  line-height: 44rpx;
  font-size: 30px;
}
.step .text{
  text-align: center;
  color: #ddd;
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 20rpx;
}
.sign-btn{
  width: 460rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 60rpx;
  background: #edc27b;
  font-size:34rpx;
  font-weight:bold;
  color:rgba(126,88,26,1);
}
.sign-btn[disabled]{
  background: #edc27b !important;
  color: #C49A56 !important;
}
.rule-tit{
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}
.rule-item{
  font-size:20rpx;
  color:rgba(102,102,102,1);
  line-height:48rpx;
  letter-spacing: -1.5rpx;
}
.ad{
  width: 100%;
  margin-top: 56rpx;
}