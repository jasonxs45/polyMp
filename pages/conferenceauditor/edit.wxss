page{
  background: #f2f2f2;
}
.section{
  padding: 30rpx;
  background: #fff;
}
.section .tit {
  font-size: 26rpx;
}
.picker{
  position: relative;
  margin-top: 30rpx;
}
.picker .wrapper{
  background: #f2f2f2;
  height: 80rpx;
  display: block;
  padding: 0 60rpx 0 30rpx;
  border-radius: 4rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
}
.picker .icon{
  position: absolute;
  right: 0;
  font-size: 30rpx;
  height: 80rpx;
  width: 60rpx;
  text-align: center;
  line-height: 80rpx;
  top:0;
  color: #777;
}
.title,
.user{
  justify-content: space-between;
  align-items: center;
}
.title .name{
  font-size: 30rpx;
}
.status{
  background: #ccc;
  padding:5rpx 15rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
}
.remark{
  background: #f2f2f2;
  color: #333;
  padding:15rpx;
  font-size: 26rpx;
  margin: 30rpx 0 0;
  border-radius: 4rpx;
  width: 100%;
}
.user{
  color: #333;
  font-size: 26rpx;
}
.time{
  font-size: 26rpx;
  margin-top: 20rpx;
}
.time:first-child{
  margin-top: 0;
}
.time .h{
  color: #666;
}
.time .b{
  flex: 1;
}
.time-item{
  margin: 15rpx 0;
  justify-content: space-between;
  font-size: 30rpx;
}
.time-item .value{
  margin-left: 30rpx;
}
.time-item:first-child{
  margin-top: 30rpx;
}
.change-date{
  font-size: 26rpx;
  justify-content: space-between;
  align-items: center;
}
.change-date .change{
  color: #666;
}
.price{
  font-size: 28rpx;
  justify-content: space-between;
  align-items: center;
}
.price .ph{
  color: #666;
}
.price .pb text{
  font-size: 180%;
  color: #f00;
  font-weight: 600;
}
.btns{
  margin: 60rpx 0;
  padding:0 30rpx;
}
.btns .btn{
  margin: 30rpx 0;
  display: block;
}
.btns .btn button{
  font-size: 32rpx;
}
.timeMain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 99;
}

.timeMain_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
}

.timeContent {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80vh;
  padding: 80rpx 0  0;
  background: #fff;
}

.timeContent_c {
  height: 100%;
  background: #fff;
  border-radius: 4px 4px 0px 0px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.timeContent_c .up, .timeContent_c .down {
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  text-align: center;
  color: #ddd;
  font-size: 30rpx;
}

.timeContent_c .content {
  padding: 30rpx;
  height: calc(100% - 50rpx);
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.timeContent .con_time {
  padding: 28rpx 0 30rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  justify-content: space-between;
  align-items: center;
}
.timeContent .con_time:last-child{
  border-bottom: none;
}

.timeBtn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 30rpx;
  color: #666;
  justify-content: space-between;
  padding: 0 30rpx;
  align-items: center;
}
.cell-group{
  width: 300rpx;
}
.checkbox-cell{
  display: inline-block;
  position: relative;
  margin-left: 30rpx;
  width:120rpx;
  height: 60rpx;
}
.checkbox-cell .checkbox{
  position: absolute;
  opacity: 0;
  width: 100% !important;
  height: 100% !important;
}
.checkbox-cell .checkbox[disabled]+.text {
  background: #ddd;
}
.checkbox-cell .text{
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #ddd;
  border-radius: 4px;
}
.checkbox-cell .checkbox[checked] + .text{
  background: #4d4d4d;
  color: #fff;
  border: 2rpx solid #4d4d4d;
}
.confirm{
  color: #00b26a;
}
.price{
  height: 80rpx;
  margin: 30rpx 0;
  border-bottom: 1rpx solid #ddd;
  align-items: center;
}
.price .ph {
  width: 50rpx;
  font-weight: 600;
  font-size: 40rpx;
}
.price .pb{
  flex: 1;
  font-size: 32rpx;
}
.goods{
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  font-size: 26rpx;
}
.goods-name{
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  padding:0 10rpx;
}
.goods-price{
  width:140rpx;
  height: 80rpx;
  background: #f5f5f5;
  text-align: center;
  margin-left: 10rpx;
}
.goods-count{
  width:100rpx;
  height: 80rpx;
  background: #f5f5f5;
  text-align: center;
  margin-left: 10rpx;
}
.goods-remove{
  width:60rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.goods-remove .remove{
  vertical-align: middle;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  font-size: 30rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.add{
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  border:1px dashed #999;
  text-align: center;
  line-height: 80rpx;
  color: #999;
  font-size: 24rpx;
}