page{
  background: #f2f2f2;
}
.list{
  padding: 30rpx 30rpx 90rpx;
  min-height: 100vh;
}
.item{
  padding: 30rpx;
  background: #fff;
  margin: 30rpx 0;
  border-radius: 4rpx;
}
.item:first-child{
  margin-top: 0;
}
.item:last-child{
  margin-bottom: 0;
}
.img{
  width:172rpx;
  height: 172rpx;
}
.texts{
  margin-left: 30rpx;
  flex: 1;
}
.title{
  font-size: 34rpx;
  color: #333;
  line-height: 48rpx;
  height: 100rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.desc{
  margin-top: 40rpx;
  justify-content: space-between;
}
.cost{
  font-size: 24rpx;
  color: #333;
  line-height: 34rpx;
}
.date{
  font-size: 24rpx;
  color: #666;
  line-height: 34rpx;
}