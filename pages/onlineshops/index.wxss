page{
  background: #f2f2f2;
}
.split {
  height: 20rpx;
  width: 100%;
  background: #f2f2f2;
}
.banner {
  width: 100%;
  height: 320rpx;
}
.banner .img {
  width: 100%;
  height: 100%;
}
.personal-info {
  width: 100%;
  height: 92rpx;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  padding: 0 130rpx;
}
.personal-info .points, .personal-info .nav {
  font-size: 26rpx;
  color: #333;
}
.sortbar{
  width:100%;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  position: relative;
}
.sortbar.fixed{
  position: fixed;
  z-index: 11;
  top:0;
  left:0;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,.2);
}
.drop-menu{
  position: absolute;
  width: 100%;
  background: #fff;
  top:100%;
  border-top:1rpx solid #ddd;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,.2);
  transition: height .2s;
  overflow: hidden;
}
.drop-menu .common-sortby{
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
  height:80rpx;
  line-height:80rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.drop-menu .common-sortby.active{
  color: #4d4d4d;
}
.drop-menu .common-sortby .wx-radio-input{
  border: none;
}
.drop-menu .common-sortby .wx-radio-input.wx-radio-input-checked{
  background: none !important;
}
.drop-menu .common-sortby .wx-radio-input.wx-radio-input-checked:before{
  color: #4d4d4d;
}
.sortbar .item{
  width: 50%;
  text-align: center;
  font-size: 26rpx;
  color:#bbb;
  transition: all .2s;
}
.sortbar .item.active{
  color: #333;
}
.sortbar .item .text{
  margin-right: 10rpx;
  display: inline-block;
  font-weight: 500;
}
.sortbar .sort-icon{
  display: inline-block;
  position: relative;
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.sortbar .sort-icon .up,
.sortbar .sort-icon .down{
  position: absolute;
  font-size: 18rpx;
  left:0;
  top: 50%;
  margin-top: -9rpx;
  color: #ddd;
  transition: all .2s;
}
.sortbar .sort-icon .up{
  margin-top: -14rpx
}
.sortbar .sort-icon .down{
  margin-top: -4rpx;
}
.item.active .up.active,
.item.active .down.active{
  color:#333;
}
.list-wrapper{
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx;
}
.cell {
  width: 330rpx;
  height: 548rpx;
  background: #fff;
  box-shadow: 0 0 2rpx 0 rgba(0,0,0,.2);
  margin: 15rpx;
  border-radius: 4px;
  overflow: hidden;
}
.cell .img{
  width: 330rpx;
  height: 330rpx;
}
.cell .detail{
  padding:30rpx;
}
.cell .title{
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 40rpx;
}
.cell .info{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 30rpx;
}
.cell .cost{
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.cell .cost text{
  color: #666;
  font-size: 16rpx;
  font-weight: 400;
}
.cell .btn{
  width: 118rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 0;
  font-size: 28rpx;
  border-radius: 4rpx; 
}