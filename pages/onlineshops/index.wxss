@import './bg.wxss';
page{
  background: #fff;
}
.signin{
  position: relative;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.base-info{
  padding: 30rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info{
  flex:0 0 200rpx;
}
.avatar{
  width: 96rpx;
  height: 96rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.nickname{
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.role{
  display: inline-block;
  margin-top: 38rpx;
  font-size: 20rpx;
  color: #fff;
  background: #4d4d4d;
  height: 26rpx;
  line-height: 26rpx;
  padding:0 10rpx;
  border-radius: 12px;
}
.points{
  flex: 1;
  text-align: right;
}
.points .text{
  font-size: 56rpx;
  margin-right: 10rpx;
}
.points .icon{
  display: inline-block;
  font-size: 32rpx;
  line-height: 56rpx;
  vertical-align: top;
  color: #666;
}
.card{
  width: 100%;
  height: 388rpx;
  position: relative;
  padding: 44rpx;
  margin-top: 50rpx;
  border-radius: 4px;
  box-shadow: 0 1px 8px 1px rgba(0,0,0,.2);
  overflow: hidden;
  transition: height .2s linear;
}
.card.short{
  height: 110rpx;
  /* border-radius: 55rpx; */
}
.card .title{
  justify-content: space-between;
  align-items: center;
}
.card .title .tit{
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}
.card .title .toggle{
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  padding:5rpx;
}
.steps{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.step{
  flex:0 0 calc(100% / 7);
  width: calc(100% / 7);
}
.step .flex{
  width: 100%;
  align-items: center;
}
.step .flex::before{
  content: '';
  border-bottom: 2px solid #fff;
  flex: 1;
}
.step .flex::after{
  content: '';
  border-bottom: 2px solid #fff;
  flex:1;
}
.step .circle{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #fff;
  text-align: center;
  color: #DC5C43;
  font-size: 16rpx;
  line-height: 44rpx;
  font-weight: 500;
  padding: 1rpx;
}
.step icon{
  width: 100%;
  height: 100%;
  opacity: .8;
  line-height: 70rpx;
  color: #f8b474;
}
.step icon:before{
  line-height: 44rpx;
  font-size: 30px;
}
.step .text{
  text-align: center;
  color: #ddd;
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 20rpx;
}
.sign-btn{
  width: 460rpx;
  height: 96rpx;
  line-height: 96rpx;
  margin-top: 60rpx;
  background: #fff;
  font-size:34rpx;
  font-weight:bold;
  color: #DC5C43;
  border-radius: 48rpx;
}
.sign-btn:after{
  display: none;
}
.sign-btn[disabled]{
  background: #ddd !important;
  color: #666 !important;
}
.banner {
  width: 100%;
  height: 200rpx;
}
.banner .img {
  width: 100%;
  height: 100%;
}
.sortbar{
  width:100%;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  position: relative;
}
.sortbar.fixed{
  position: fixed;
  z-index: 11;
  top:0;
  left:0;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,.2);
}
.drop-menu{
  position: absolute;
  width: 100%;
  background: #fff;
  top:100%;
  border-top:1rpx solid #ddd;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,.2);
  transition: height .2s;
  overflow: hidden;
}
.drop-menu .common-sortby{
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
  height:80rpx;
  line-height:80rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.drop-menu .common-sortby.active{
  color: #4d4d4d;
}
.drop-menu .common-sortby .wx-radio-input{
  border: none;
}
.drop-menu .common-sortby .wx-radio-input.wx-radio-input-checked{
  background: none !important;
}
.drop-menu .common-sortby .wx-radio-input.wx-radio-input-checked:before{
  color: #4d4d4d;
}
.sortbar .item{
  width: 50%;
  text-align: center;
  font-size: 26rpx;
  color:#bbb;
  transition: all .2s;
}
.sortbar .item.active{
  color: #333;
}
.sortbar .item .text{
  margin-right: 10rpx;
  display: inline-block;
  font-weight: 500;
}
.sortbar .sort-icon{
  display: inline-block;
  position: relative;
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.sortbar .sort-icon .up,
.sortbar .sort-icon .down{
  position: absolute;
  font-size: 18rpx;
  left:0;
  top: 50%;
  margin-top: -9rpx;
  color: #ddd;
  transition: all .2s;
}
.sortbar .sort-icon .up{
  margin-top: -17rpx
}
.sortbar .sort-icon .down{
  margin-top: -7rpx;
}
.item.active .up.active,
.item.active .down.active{
  color:#333;
}
.list-wrapper{
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #ddd;
}
.cell {
  width: 50%;
  height: 480rpx;
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #ddd;
  padding: 30rpx;
  position: relative;
}
.cell .bottom{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 15rpx;
}

.cell.w100{
  width: 100%;
  height: auto !important;
  line-height: 1 !important;
  border-bottom: none;
}
.cell:nth-child(2n+1) {
  border-right: 1rpx solid #ddd;
}
.cell .img{
  width: 100%;
  height: 314rpx;
}
.cell .detail{
  padding:20rpx 0 0;
}
.cell .title{
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 40rpx;
  height: 40rpx;
  white-space: nowrap;
}
.cell .info{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 15rpx;
}
.cell .cost{
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.cell .cost text{
  color: #666;
  font-size: 20rpx;
  font-weight: 400;
}
.cell .exchange{
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}
.cell .exchange text{
  color: #666;
  font-weight: 300;
}
.cell .btn{
  width: 118rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 0;
  font-size: 28rpx;
  border-radius: 4rpx; 
  color: #fff !important;
}
.success{
  position: fixed;
  width:100%;
  height: 100%;
  top:0;
  left:0;
  z-index:1;
}
.success .bg{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.87);
}
.success-wrapper{
  position: absolute;
  width:100%;
  height: 100%;
  top:0;
  left:0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.succ{
  width: 540rpx;
  height: 560rpx;
  position: relative;
}
.succ_bg{
  width: 100%;
  height: 100%;
}
.succ .desc{
  text-align: center;
  color: #333;
  font-size: 30rpx;
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  padding: 10rpx 50rpx;
  z-index:1;
  line-height: 42rpx;
}
.desc text{
  font-size: 150%;
  font-weight: 500;
}
.close{
  margin-top: 120rpx;
}