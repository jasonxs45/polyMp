.visit-apply {
  width: 100%;
  padding: 0 0 200rpx;
  position: relative;
  min-height: 100vh;
}

.visit-apply.fix {
  height: 100vh;
  overflow: hidden;
}

.content {
}

.title {
  text-align: center;
}

.logo {
  width: 318rpx;
  margin: 60rpx auto 0;
  display: block;
}

.form {
  padding: 30rpx;
}

.form-bar {
  display: block;
  margin-top: 30rpx;
}

.fh {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}

.fb {
  font-size: 30rpx;
  margin-top: 30rpx;
  width: 100%;
}

.clearable-input {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.textarea {
  width: 100%;
  height: 150rpx;
  color: #4d4d4d;
  background: #f5f5f5;
  border-radius: 4rpx;
  padding: 15rpx;
}

.input {
  width: 100%;
  height: 100%;
  color: #4d4d4d;
}

.select {
  box-sizing: border-box;
  padding: 0 15rpx;
  position: relative;
}

.select .icon {
  width: 50rpx;
  height: 100%;
  line-height: inherit;
  position: absolute;
  top: 0;
  right: 0;
  color: #666;
  font-size: 30rpx;
}

.select .text {
  display: inline-block;
}

.select .placeholder {
  color: #888;
}

.btns {
  text-align: center;
  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 30rpx 30rpx;
  z-index: 10;
}

.btn {
  font-size: 34rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 600;
  margin-top: 30rpx;
}

.torecord {
  color: #666;
  font-size: 26rpx;
  margin-top: 40rpx;
}

.side-menu {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 11;
}

.side-menu .bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
}

.side-menu .side-menu-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 80%;
  background: #fff;
}

.side-menu .side-menu-wrapper .title {
  font-size: 30rpx;
  color: #666;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ddd;
}

.list-wrapper {
  width: 100%;
  height: calc(100% - 160rpx);
}

.list-wrapper .contact {
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  color: #333;
  margin: 15rpx 0;
}

.list-wrapper .name-cell {
}

.list-wrapper .tel-cell {
  text-align: right;
}

.side-menu .side-menu-wrapper .close {
  font-size: 30rpx;
  color: #666;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  border-top: 1px solid #ddd;
}

.side-menu .no-c {
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  color: #333;
  margin: 15rpx 0;
  text-align: center;
}
