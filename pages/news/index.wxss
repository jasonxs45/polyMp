page{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.swiper{
  height: 320rpx;
  width: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}
.swiper .img,
.swiper .nav{
  width: 100%;
  height: 100%;
}
.item{
  padding: 30rpx 0;
}
.item .img{
  width: 280rpx;
  height: 170rpx;
  border-radius: 8rpx;
}
.item .text{
  flex:1;
  margin-left: 20rpx;
  position: relative;
}
.item .title{
  height: 120rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item .date{
  color: #999;
  font-size: 20rpx;
  text-align: right;
  position: absolute;
  bottom: 0;
  right: 0;
}