@import "/libs/wxParse/wxParse.wxss";
page {
  background: #f2f2f2;
  padding-bottom: 100rpx;
}
.swiper{
  width: 100%;
  height: 350rpx;
  background: #fff;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.con {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.con_title {
  color: #333;
  font-size: 36rpx;
  line-height: 46rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.con_title text {
  padding: 0 10rpx;
  height: 36rpx;
  margin-top: 8rpx;
  background: #4d4d4d;
  color: #fff;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: center;
  font-weight: 400;
  float: right;
}

.con_text {
  margin: 0 0 20rpx;
  background: #fff;
  font-size: 26rpx;
  color: #666;
  line-height: 36rpx;
}
.desc{
  padding: 30rpx;
  margin: 0 0 20rpx;
  background: #fff;
  font-size: 26rpx;
  color: #666;
  line-height: 36rpx;
}
.desc .wxParse-p{
  line-height: 1.6;
}
.p{
  justify-content: space-between;
  margin-top: 20rpx;
}
.price,.advance{
  color: #333;
  font-size: 26rpx;
}
.advance text{
  font-weight: bold;
  padding:0 5rpx;
}

.conigators {
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #333;
  font-size: 34rpx;
  font-family: PingFang-TC-Medium;
  font-weight: 500;
  color: #edc27b;
}
.con_time {
  color: #333;
  text-align: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.con_time text {
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
}
.cell-group{
  width: 300rpx;
}
.checkbox-cell{
  display: inline-block;
  position: relative;
  margin-left: 30rpx;
  width:120rpx;
  height: 60rpx;
}
.checkbox-cell .checkbox{
  position: absolute;
  opacity: 0;
  width: 100% !important;
  height: 100% !important;
}
.checkbox-cell .checkbox[disabled]+.text {
  background: #ddd;
}
.checkbox-cell .text{
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #ddd;
  border-radius: 4px;
}
.checkbox-cell .checkbox[checked] + .text{
  background: #4d4d4d;
  color: #fff;
  border: 2rpx solid #4d4d4d;
}
.timeMain {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 99;
}

.timeMain_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
}

.timeContent {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80vh;
  padding: 80rpx 0  0;
  background: #fff;
}

.timeContent_c {
  height: 100%;
  background: #fff;
  border-radius: 4px 4px 0px 0px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.timeContent_c .up, .timeContent_c .down {
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  text-align: center;
  color: #ddd;
  font-size: 30rpx;
}

.timeContent_c .content {
  padding: 30rpx;
  height: calc(100% - 50rpx);
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.timeContent .con_time {
  padding: 28rpx 0 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.timeContent .con_time:last-child{
  border-bottom: none;
}

.timeBtn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 30rpx;
  color: #666;
  justify-content: space-between;
  padding: 0 30rpx;
  align-items: center;
}
.confirm{
  color: #333;
}
.current .num{
  color: #f00;
  font-weight: 500;
  font-size: 120%;
}
.origin{
  margin-top: 15rpx;
}