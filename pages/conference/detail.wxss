page {
  background: #f2f2f2;
  padding-bottom: 100rpx;
}

.con {
  background: #fff;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
}

.con_img {
  margin-bottom: 30rpx;
}

.con_img image {
  display: block;
  width: 100%;
}

.con_title {
  padding: 0 30rpx;
  color: #333;
  font-size: 36rpx;
  line-height: 46rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.con_title text {
  padding: 0 10rpx;
  height: 36rpx;
  margin-top: 8rpx;
  background: rgba(237, 194, 123, 0.2);
  color: #c49a56;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: center;
  font-weight: 400;
  float: right;
}

.con_text {
  clear: both;
  padding: 0 30rpx;
  font-size: 24rpx;
  font-family: PingFang-TC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
}

.con_text {
  display: block;
  margin: 0 30rpx 20rpx 30rpx;
  background: #fff;
  padding: 30rpx 20rpx 40rpx;
  font-size: 26rpx;
  font-family: PingFang-TC-Regular;
  font-weight: 400;
  color: #666;
  line-height: 36rpx;
}

.con_text .con_text_title {
  display: block;
  font-size: 32rpx;
  font-family: PingFang-TC-Medium;
  font-weight: 500;
  color: #333;
  line-height: 36rpx;
  margin-bottom: 30rpx;
}

.conigators {
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #333;
  font-size: 34rpx;
  font-family: PingFang-TC-Medium;
  font-weight: 500;
  color: #edc27b;
}
