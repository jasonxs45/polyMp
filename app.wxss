/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
view, scroll-view, picker-view, navigator, image, input, text{
  box-sizing: border-box;
  padding:0;
  margin:0;
  line-height: 1;
}
image{
  display: block;
}
.form-bar,.flex{
  display: flex;
}
/* 标签形式的选择 */
.cell-select{
  position: relative;
  display: inline-block;
}
.cell-select radio{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.cell-select .text{
  display: inline-block;
  border:1rpx solid #4d4d4d;
}
.cell-select .text.checked{
  background-color:#4d4d4d;
  color: #fff;
}
/* 重写部分原生组件样式 */
button[type=primary]{
  background: #4d4d4d !important;
  color:#EDC27B !important;
}
button[disabled]{
  background: #ccc !important;
  color: #888 !important;
}